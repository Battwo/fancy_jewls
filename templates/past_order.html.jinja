#for loop to display past orders
{% for order in past_orders %}  
    <div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow mb-8">
        <h2 class="text-2xl font-bold mb-4">Order #{{ order['OrderID'] }} - {{ order['OrderDate'] }}</h2>
        <div class="space-y-4">
        {% for item in order['Items'] %}
        <div class="grid grid-cols-5 items-center border-b pb-4">
            <img src="{{ item['Image'] }}" class="h-20 w-20 object-contain rounded border">
            <div class="col-span-2 font-semibold">{{ item['Name'] }}</div>
            <div class="text-center">Quantity: {{ item['Quantity'] }}</div>
            <div class="text-right font-semibold">${{ item['Price'] * item['Quantity'] }}</div>
        </div>
        {% endfor %}
        </div>
        <div class="text-right mt-4">
        <span class="text-lg font-bold">Total: ${{ order['TotalAmount'] }}</span>
        </div>
    </div>
    {% endfor %}