<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-gray-100 min-h-screen">
    {% include "components/navbar.html.jinja" %}
    <h1 class="text-3xl font-bold text-center my-8">Past Orders</h1>
{% for order in past_order %}  
    <div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow mb-8">
        <h2 class="text-2xl font-bold mb-4">Order #{{ order['ID'] }} - {{ order['Timestamp'] }}</h2>
        <div class="space-y-4">
        </div>
        <div class="text-right mt-4">
        <span class="text-lg font-bold">Total: ${{ order['Total'] }}</span>
        </div>
    </div>
{% endfor %}
</body>
</html>
