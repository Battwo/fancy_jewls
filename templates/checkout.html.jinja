<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <title>Cart</title>
</head>

<body class="bg-gray-100 min-h-screen">

{% include "components/navbar.html.jinja" %}

<form method="post" action="/checkout/place_order">
    <main class="max-w-7xl mx-auto p-6 pt-24 grid grid-cols-3 gap-6">
        
        <section class="col-span-2">
            <h1 class="text-3xl font-bold mb-6">Checkout</h1>
            {% for x in cart %}
            <div class="grid grid-cols-5 items-center bg-white rounded-lg shadow p-4 mb-4 gap-4">
                <img src="{{ x['Image'] }}" class="h-24 w-24 object-contain rounded border">
                <div class="col-span-2 font-semibold">{{ x['Name'] }}</div>
                <div class="text-center">
                    <form method="post" action="/cart/{{ x['ProductID'] }}/update_qty" class="flex flex-col gap-1 items-center">
                        <input name="qty" type="number" value="{{ x['Quantity'] }}" min="1" class="w-16 border rounded px-2 py-1 text-center">
                        <button type="submit" class="text-sm text-blue-600 hover:underline">Update</button>
                    </form>
                    <form method="post" action="/cart/{{ x['ProductID'] }}/remove">
                        <button type="submit" class="text-sm text-red-500 hover:underline mt-1">Remove</button>
                    </form>
                </div>
                <div class="text-right">
                    <div class="font-semibold">${{ x['Price'] }}</div>
                    <div class="text-sm text-gray-600">Subtotal: ${{ x['Price'] * x['Quantity'] }}</div>
                </div>
            </div>

            {% endfor %}
        </section>

        
        <section>
            <div class="bg-white rounded-lg shadow p-5">
                <h2 class="text-lg font-bold mb-4">Shipping Address</h2>
                <div class="space-y-3 text-sm">
                    <div>
                        <label class="block font-semibold mb-1">Street</label>
                        <input type="text" name="street" required placeholder="123 Main St" class="w-full border rounded-md px-2 py-1 focus:outline-none focus:ring-2 focus:ring-blue-400">
                    </div>
                    <div>
                        <label class="block font-semibold mb-1">City</label>
                        <input type="text" name="city" required placeholder="New York" class="w-full border rounded-md px-2 py-1 focus:outline-none focus:ring-2 focus:ring-blue-400">
                    </div>
                    <div class="grid grid-cols-2 gap-2">
                        <div>
                            <label class="block font-semibold mb-1">State</label>
                            <input type="text" name="state" required placeholder="NY" class="w-full border rounded-md px-2 py-1 focus:outline-none focus:ring-2 focus:ring-blue-400">
                        </div>
                        <div>
                            <label class="block font-semibold mb-1">Zip</label>
                            <input type="text" name="zip" required placeholder="10001" class="w-full border rounded-md px-2 py-1 focus:outline-none focus:ring-2 focus:ring-blue-400">
                        </div>
                    </div>
                </div>
            </div>
            <form method="post" class="mt-6">
            <div class="flex justify-end mt-6">
                <button class="bg-green-600 hover:bg-green-700 text-white font-bold px-8 py-3 rounded-lg transition">
                    <span> Place Order</span>
                </button>
            </form> 
            </div>
        </section>
    </main>
</form>
