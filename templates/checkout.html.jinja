<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <title>Cart</title>
</head>

<body class="bg-gray-100 min-h-screen">

{% include "components/navbar.html.jinja" %}

<main class="max-w-5xl mx-auto p-6 pt-24">
<div>
  <h1 class="text-3xl font-bold mb-6">
    checkout page
  </h1>

  {% for x in cart %}
  <div class="grid grid-cols-5 items-center bg-white rounded-lg shadow p-4 mb-4 gap-4">

 
    <img src="{{ x['Image'] }}"
         class="h-24 w-24 object-contain rounded border">

    <div class="col-span-2 font-semibold">
      {{ x['Name'] }}
    </div>

   
    <div class="text-center">
      <form method="post" action="/cart/{{ x['ProductID'] }}/update_qty" class="flex flex-col gap-1 items-center">
        <input
          name="qty"
          type="number"
          value="{{ x['Quantity'] }}"
          min="1"
          class="w-16 border rounded px-2 py-1 text-center"
        >
        <button type="submit" class="text-sm text-blue-600 hover:underline">
          Update
        </button>
      </form>

      <form method="post" action="/cart/{{ x['ProductID'] }}/remove">
        <button type="submit" class="text-sm text-red-500 hover:underline mt-1">
          Remove
        </button>
      </form>
    </div>

    
    <div class="text-right">
      <div class="font-semibold">${{ x['Price'] }}</div>
      <div class="text-sm text-gray-600">
        Subtotal: ${{ x['Price'] * x['Quantity'] }}
      </div>
    </div>
  {% endfor %}
    </div>
</div> 

 <form method="POST"
                class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-md space-y-5 flex-auto ">

            <h1 class="text-2xl font-bold text-center text-gray-800">            additonal info
</h1>

            <input type="email" name="email" placeholder="Email" required
                class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">

            <input type="password" name="password" placeholder="Password" required
                class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">

            <button type="submit"
                    class="w-full bg-blue-600 text-white font-semibold py-3 rounded-xl hover:bg-blue-700 transition">
            additonal info
            </button>
        </div>
</main>

</body>
</html>