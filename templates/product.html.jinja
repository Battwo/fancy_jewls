<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>

  <body class="bg-white text-gray-900">
    {% include "components/navbar.html.jinja" %}

    <main class="max-w-6xl mx-auto px-6 py-10 grid grid-cols-1 md:grid-cols-2 gap-10">

      <div class="flex justify-center">
        <img
          src="{{ product['Image'] }}"
          alt="{{ product['Name'] }}"
          class="w-full max-w-md rounded-lg shadow-md"
        >
      </div>

      <div>
        <h1 class="text-2xl font-semibold">{{ product['Name'] }}</h1>

        <p class="mt-3 text-3xl font-bold">${{ product['Price'] }}</p>

        <p class="mt-5 text-gray-600 leading-relaxed">
          {{ product['Description'] }}
        </p>

        <form method="post" action="/product/{{ product['ID'] }}/add_to_cart"
              class="mt-6 flex items-center gap-4">

          <div>
            <label class="block text-sm font-medium mb-1">Qty</label>
            <input type="number" name="quantity" value="1" min="1" max="67"
                   class="w-20 border rounded-md px-3 py-2 focus:ring-2 focus:ring-black">
          </div>

          <button
            type="submit"
            class="mt-6 bg-black text-white px-6 py-3 rounded-md font-semibold hover:bg-gray-800 transition">
            ADD TO CART
          </button>
        </form>
      </div>
    </main>

    <section class="max-w-4xl mx-auto px-6 pb-20">

      <h2 class="text-xl font-semibold mb-6">Customer Reviews</h2>

      <form method="post" action="/product/{{ product['ID'] }}/review"
            class="bg-gray-50 border rounded-xl p-6 mb-8">

        <label class="block font-medium mb-2">Write a review</label>

        <textarea
          name="review"
          rows="4"
          required
          placeholder="Share your thoughts about this product..."
          class="w-full border rounded-md p-3 focus:ring-2 focus:ring-black resize-none"
        ></textarea>

        <button
          type="submit"
          class="mt-4 bg-black text-white px-6 py-2 rounded-md hover:bg-gray-800 transition">
          Submit Review
        </button>

      </form>



    </section>

  </body>
</html>
